    <!-- Scene configuration -->
    <scene>
      <ambient>0.4 0.4 0.4 1</ambient>
      <background>0.7 0.85 1.0 1</background>  <!-- Sky blue background -->
      <shadows>true</shadows>
      <grid>true</grid>
    </scene>

    <!--
      Plugins for simulation control
      These are loaded automatically in Gazebo Harmonic
    -->

    <!-- Physics system -->
    <plugin
      filename="gz-sim-physics-system"
      name="gz::sim::systems::Physics">
    </plugin>

    <!-- User commands (apply forces, spawn models) -->
    <plugin
      filename="gz-sim-user-commands-system"
      name="gz::sim::systems::UserCommands">
    </plugin>

    <!-- Scene broadcaster (for visualization) -->
    <plugin
      filename="gz-sim-scene-broadcaster-system"
      name="gz::sim::systems::SceneBroadcaster">
    </plugin>

  </world>
</sdf>
